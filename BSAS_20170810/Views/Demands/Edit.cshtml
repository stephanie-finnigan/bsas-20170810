@model BSAS_20170810.Models.Demand

@{
    ViewBag.Title = "Edit Demand";
}

<div class="page-title">
    <h2>@ViewBag.Title</h2>
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DemandId)

        <div class="form-group">
            @Html.LabelFor(model => model.SubmitDate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(model => model.SubmitDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubmitDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateDespatched, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.DateDespatched, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateDespatched, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateDelivered, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.DateDelivered, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateDelivered, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DemandItems, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <table class="table">
                    <tr>
                        <th>NSN</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Quantity</th>
                    </tr>
                    @foreach (var item in Model.DemandItems)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Holding.NSN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Holding.HoldingName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Holding.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemQuantity)
                            </td>
                        </tr>
                        }
                </table>
            </div>
        </div>
        <div class="form-group">
            <div class= "col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
