@model BSAS_20170810.Models.Demand
@{
    ViewBag.Title = "Create Demand";
}

<div class="page-title">
    <h2>@ViewBag.Title</h2>
</div>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="create-demand">
            <div class="form-group">
                @Html.Label("Authorised Demander", new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBox("Demander", User.Identity.Name, new { @disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SubmitDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SpecialInstructions, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextAreaFor(model => model.SpecialInstructions, new { @class = "form-control", @rows = 4 })
                    @Html.ValidationMessageFor(model => model.SubmitDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Remarks, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @rows = 4 })
                    @Html.ValidationMessageFor(model => model.SubmitDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SubmitDate, "Today's Date", new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBox("SubmitDate", DateTime.Now.ToString("dd-MMM-yyyy"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SubmitDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-2">
                <input type="submit" value="Submit" class="btn btn-default" style="font-size:20px"/>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}